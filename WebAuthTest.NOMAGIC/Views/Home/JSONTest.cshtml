            allpeeps = {};

            $('#refresh').click(() => {
                // remove all BUT the first row
                while ($('#poops tr').length > 1) {
                    $("#poops tr").last().remove();
                }
                // get new data
                $.getJSON("/api/Peeps", (data) => {
                    //alert(data.length);
                    allpeeps = data;
                    for (i = 0; i < data.length; i++) {
                        tr = $('<tr>');
                        td = $('<td>');
                        td.text(data[i].name);
                        tr.append(td);
                        td = $('<td>');
                        td.text(data[i].age);
                        tr.append(td);
                        $('#poops').append(tr);
                    }
                });
            });
            $('#refresh').click();

            $("#testpost").click(() => {
                $.post("/api/Peeps", allpeeps[0]);
            })

        </script>
